            '{{map.bt_id}}',            // 6
            '{{map.start_price}}',      // 7
            '{{map.end_price}}',        // 8
            '{{map.type_name}}',        // 9
            "{{ path('FTRWebBundle_detail', {'buildId':map.id, 'province':map.province_name, 'prefecture':map.amphur_name, 'slug':map.slug}) }}"        // 10
        ],
        {% endfor %}
    ];

    var locationsmap2 = [
        {% for map in get_map2 %}
        [
            '{{map.building_name}}',    // 0
            {{map.latitude}},           // 1
            {{map.longitude}},          // 2
            1,                          // 3
            {{map.id}},                 // 4
            '{{map.path_image}}',       // 5
            '{{map.bt_id}}',            // 6
            '{{map.start_price}}',      // 7
            '{{map.end_price}}',        // 8
            '{{map.type_name}}',        // 9
