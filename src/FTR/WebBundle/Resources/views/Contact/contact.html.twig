<script>
	function sendContact() {	
		var reg = /^([A-Za-z0-9_\-\.])+\@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;
		
			if($('#name').val()=="")
			{
				$("#txterror").html("กรุณากรอก ชื่อ");
	            return false;
	        }
	        
	        else if($('#tel').val()=="")
	        {
	        	$("#txterror").html("กรุณากรอก หมายเลขโทรศัพท์");
	            return false;
	        }
	        else if(document.getElementById('tel').value.length<9){
	        	$("#txterror").html("หมายเลขโทรศัพท์ไม่ถูกต้อง");
		        return false;
	        }
	        
	        else if($('#title').val()=="")
			{
	           $("#txterror").html("กรุณากรอก เรื่องที่ต้องการติดต่อ");
	           return false;
	        }
	        
	        else if($('#mail').val()=="")
	        {
	        	$("#txterror").html("กรุณากรอกอีเมลล์");
	            return false;
	        }else if(reg.test($('#mail').val())==false)
	        {
	        	$("#txterror").html("กรุณากรอก Email ให้ถูกต้อง");
		        return false;
	        }
	        else if($('#desc').val()=="")
			{
				$("#txterror").html("กรุณากรอก รายละเอียดที่ต้องการติดต่อ");
	            return false;
	        }
	        else if($('#captcha').val() != $('#cap2').val())
	        {
	        	$("#txterror").html("กรุณายืนยันรหัส");
				return false;
			}else{
				return true;
			}			
	}
</script>
<div class="detail" style="margin-bottom:15px; height: 470px;">
