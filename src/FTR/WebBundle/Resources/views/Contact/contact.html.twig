<script>
    function chkCaptcha() {
        $.post("{{asset('captcha/post.php')}}", {
            name : $('#code').val()
        }, function(data) {
            if (data == 1) {
                $('#formContact').submit();
            } else if (data == 0) {
                $("#txterror").html("กรุณากรอก รหัสให้ตรง");
                $("#txterror").hide();
                $("#txterror").show("slow");
                document.getElementById('txterror').focus();
            }return false;
        });
    }

    function chValidate() {
        var reg = /^([A-Za-z0-9_\-\.])+\@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;

        if ($('#name').val() == "") {
            $("#txterror").html("กรุณากรอก ชื่อ");
            $("#txterror").hide();
            $("#txterror").show("slow");
            document.getElementById('txterror').focus();
            return false;
        } else if ($('#tel').val() == "") {
            $("#txterror").html("กรุณากรอก หมายเลขโทรศัพท์");
            $("#txterror").hide();
            $("#txterror").show("slow");
            document.getElementById('txterror').focus();
            return false;
        } else if (document.getElementById('tel').value.length < 9) {
            $("#txterror").html("หมายเลขโทรศัพท์ไม่ถูกต้อง");
            $("#txterror").hide();
            $("#txterror").show("slow");
            document.getElementById('txterror').focus();
            return false;
        } else if ($('#title').val() == "") {
            $("#txterror").html("กรุณากรอก เรื่องที่ต้องการติดต่อ");
            $("#txterror").hide();
            $("#txterror").show("slow");
            document.getElementById('txterror').focus();
            return false;
        } else if ($('#mail').val() == "") {
            $("#txterror").html("กรุณากรอกอีเมลล์");
            return false;
        } else if (reg.test($('#mail').val()) == false) {
            $("#txterror").html("กรุณากรอก Email ให้ถูกต้อง");
            $("#txterror").hide();
            $("#txterror").show("slow");
            document.getElementById('txterror').focus();
            return false;
        } else if ($('#desc').val() == "") {
            $("#txterror").html("กรุณากรอก รายละเอียดที่ต้องการติดต่อ");
            $("#txterror").hide();
            $("#txterror").show("slow");
            document.getElementById('txterror').focus();
            return false;
        } else if ($('#code').val() == "") {
            $("#txterror").html("กรุณากรอก ยืนยันรหัส");
            $("#txterror").hide();
            $("#txterror").show("slow");
            document.getElementById('txterror').focus();
            return false;
        } else {
            return true;
        }
    }
</script>
