<h1>Site_detail list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Keyword</th>
            <th>Tag_line</th>
            <th>Base_url</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('site_detail_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.keyword }}</td>
            <td>{{ entity.tagline }}</td>
            <td>{{ entity.baseurl }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('site_detail_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('site_detail_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('site_detail_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
