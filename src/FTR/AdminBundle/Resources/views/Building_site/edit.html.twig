<script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js'></script>
<script>
	$(document).ready(function() {
		$("#btnCancelEdit").click(function() {
			toggle(".editPanel", 'hide');
			return false;
		});

		function toggle(id, toggle) {
			$(id).animate({
				left : '+=50',
				height : toggle
			}, 500, function() {
			});
		}

		var url = "{{ path('building_site_update', { 'id': entity.id }) }}";
		$("#formEdit").submit(function() {
			$.ajax({
				type : "POST",
				url : url,
				data : $(this).serialize(),
				success : function(msg) {
					if (msg == 'finish') {
						alert('การแก้ไขเสร็จเรียบร้อย');
						// $('#listBuildingSite').load(window.location + "show");
						toggle(".editPanel", 'hide');
						$('#listBuildingSite').fadeOut('slow').load(window.location + "show").fadeIn("slow");
					} else {
						$('.editPanel').html(msg);
						alert('การแก้ไขผิดพลาด');
					}
				}
			});
			return false;
		});
	}); 
</script>
