    $(document).ready(function() {
        $("#formEdit").submit(function(){
            var url = "{{ path('facilitylist_update', { 'id': entity.id }) }}";
            $.ajax({
                type : "POST",
                url : url,
                data : $("#formEdit").serialize(),
                success : function(msg) {
                    if (msg == 'finish') {
                        $("#btnShowHide").show("slow");
                        $('#innerPanel').fadeOut(100).load("{{ path('facilitylist') }}").fadeIn("slow");
                        $("#edit").slideUp(300).delay(800).fadeOut(400);
                        alert('√ ทำการแก้ไข Facility เรียบร้อยแล้ว');
                    } else {
                        $('#edit').fadeOut().load(msg).fadeIn("slow");
                        alert('เกิดการผิดพลาด\n** กรุณาตรวจสอบ **');
                    }
                }
            });
            return false;
        });

        $("#btnCancelEdit").click(function(){
            $("#btnShowHide").show("slow");
            $("#edit").slideUp(300).delay(800).fadeOut(400);
            return false;
        });
    });

</script>
