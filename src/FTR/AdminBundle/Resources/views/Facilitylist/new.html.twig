<script>
    $(document).ready(function() {
        $("#formCreate").submit(function(){
            var url = "{{ path('facilitylist_create') }}";
            $.ajax({
                type : "POST",
                url : url,
                data : $(this).serialize(),
                success : function(msg) {
                    if (msg == "finish_comp"){
                        alert('!!! ชื่อ Facility "' + $("#ftr_adminbundle_pay_typetype_typename").val() + '" นี้มีข้อมูลอยู่แล้ว');
                    }else if (msg == 'finish') {
                        $("#btnShowHide").show("slow");
                        $('#innerPanel').fadeOut(100).load("{{ path('facilitylist') }}").fadeIn("slow");
                        $("#new").slideUp(300).delay(800).fadeOut(400);
                        alert('√ ทำการเพิ่ม Facility เรียบร้อยแล้ว');
                    } else {
                        $('#new').fadeOut().load(msg).fadeIn("slow");
                        alert('เกิดการผิดพลาด\n** กรุณาตรวจสอบ **');
                    }
                }
            });
            return false;
        });

        $("#btnCancelCreate").click(function(){
            $("#btnShowHide").show("slow");
            $("#new").slideUp(300).delay(800).fadeOut(400);
            return false;
        });
    });
</script>
